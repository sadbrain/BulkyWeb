@page
@model BulkyWebRazor_Temp.Pages.Categories.IndexModel
@{
}
<div class="container">
    <div class="row pt-4 pb-4">
        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>

        </div>
        <div class="col-6 text-primary text-end">
            <a class="btn btn-primary" asp-page="/categories/Create">
                <i class="bi bi-plus-circle"></i>
                Create New Category
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Category Name
                </th>
                <th>
                    Category Order
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.CategoryList)
            {
                <tr>
                    <td>
                        @obj.Name
                    </td>
                    <td>
                        @obj.DisplayOrder
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-page="/categories/Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-4">
                                <i class="bi bi-pencil-square"></i>Edit
                            </a>

                            <a asp-page="/categories/Delete"  asp-route-id="@obj.Id" class="btn btn-danger mx-4">
                                <i class="bi bi-trash-fill"></i>Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>