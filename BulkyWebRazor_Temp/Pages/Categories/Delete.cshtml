@page
@model BulkyWebRazor_Temp.Pages.Categories.DeleteModel
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row mb-4">
            <h1>Delete Category</h1>
            <hr />
        </div>
        <div class="mb-4 row p-1">
            <label asp-for="Category.Name" class="p-0"></label>
            <input asp-for="Category.Name" disabled class="form-control" />
        </div>
        <div class="mb-4 row p-1">
            <label asp-for="Category.DisplayOrder" class="p-0"></label>
            <input asp-for="Category.DisplayOrder" disabled class="form-control" />

        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">
                    Delete
                </button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-page="/categories/Index" class="btn btn-secondary form-control">
                    Back To List
                </a>
            </div>
        </div>


    </div>
</form>
